{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake configure",
            "type": "shell",
            "command": "cmake -S ${workspaceFolder} -B ${workspaceFolder}/build -DCMAKE_BUILD_TYPE=Debug",
            "group": "build",
            "problemMatcher": ["$gcc"],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "cmake build",
            "type": "shell",
            "command": "cmake --build ${workspaceFolder}/build -j",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "run hello_gst",
            "type": "shell",
            "command": "${workspaceFolder}/build/Basic/01_hello_world/basic-tutorial-1",
            "dependsOn": ["cmake build"],
            "problemMatcher": []
        },
        {
            "label": "run basic_tutorial_2",
            "type": "shell",
            "command": "${workspaceFolder}/build/Basic/02_GStreamer_concepts/basic_tutorial_2",
